<!-- Header Section Begin -->
<header class="header">
  <div class="header__top">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6">
          <div class="header__top__left">
            <ul>
              {{#if user}}
              <li><i class="fa fa-envelope"></i> {{user.email}}</li>
              {{else}}
              <li><i class="fa fa-envelope"></i> hello@colorlib.com</li>
              {{/if}}
              <li>Free Shipping for all Order of ₹499</li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6 col-md-6">
          <div class="header__top__right">
            <div class="header__top__right__social">
              <a href="/userProfile"><i class="fa fa-facebook"></i></a>
              <a href="#"><i class="fa fa-twitter"></i></a>
              <a href="#"><i class="fa fa-linkedin"></i></a>
              <a href="#"><i class="fa fa-pinterest-p"></i></a>
            </div>
            <div class="header__top__right__auth">
              {{#if user}}
              <div><a href="/logout">Logout</a></div>
              {{/if}}
            </div>
            <div class="header__top__right__auth">
              {{#if user}}
              <a href="/userProfile"><i class="fa fa-user"></i> {{user.name}}</a>
              {{else}}
              <a href="/loginmail"><i class="fa fa-user"></i> Login</a>
              {{/if}}

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <div class="header__logo">
          <a href="/"><img src="img/logo.png" alt="" /></a>
        </div>
      </div>
      <div class="col-lg-6">
        <nav class="header__menu">
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/get-products">Shop</a></li>
            <li><a href="/get-order">Orders</a></li>
            <li><a href="/contact-us">Contact Us</a></li>
          </ul>
        </nav>
      </div>
      <div class="col-lg-3">
        <div class="header__cart">
          {{#if user}}
          <ul>
            <li><a href="/wishlist"><i class="fa fa-heart"></i>
                <span id="wishlist-count">{{header.wishlist}}</span></a></li>
            <li><a href="/cart"><i class="fa fa-shopping-bag"></i>
                <span id="cart-count">{{header.cartCount}}</span></a></li>
          </ul>
          <div class="header__cart__price">wallet:₹{{header.wallet}}.00</span></div>{{/if}}
          {{!-- <span id="totalh"></span> --}}
        </div>
      </div>
    </div>
    <div class="humberger__open">
      <i class="fa fa-bars"></i>
    </div>
  </div>
  <div class="humberger__menu__overlay"></div>
  <div class="humberger__menu__wrapper">
    <div class="humberger__menu__logo">
      <a href="#"><img src="img/logo.png" alt="" /></a>
    </div>
    <div class="humberger__menu__cart">
      {{#if user}}
          <ul>
            <li><a href="/wishlist"><i class="fa fa-heart"></i>
                <span id="wishlist-count">{{header.wishlist}}</span></a></li>
            <li><a href="/cart"><i class="fa fa-shopping-bag"></i>
                <span id="cart-count">{{header.cartCount}}</span></a></li>
          </ul>
          <div class="header__cart__price">wallet:₹{{header.wallet}}.00</span></div>{{/if}}
    </div>
    <div class="humberger__menu__widget">
      <div class="header__top__right__auth">
          {{#if user}}
              <div><a href="/logout">Logout</a></div>
              {{/if}}
            </div>
            <div class="header__top__right__auth">
              {{#if user}}
              <a href="/userProfile"><i class="fa fa-user"></i> {{user.name}}</a>
              {{else}}
              <a href="/loginmail"><i class="fa fa-user"></i> Login</a>
              {{/if}}
      </div>
    </div>
    <nav class="humberger__menu__nav mobile-menu">
      <ul>
       <li><a href="/">Home</a></li>
            <li><a href="/get-products">Shop</a></li>
            <li><a href="/get-order">Orders</a></li>
            <li><a href="/contact-us">Contact Us</a></li>
      </ul>
    </nav>
    <div id="mobile-menu-wrap"></div>
    <div class="header__top__right__social">
      <a href="#"><i class="fa fa-facebook"></i></a>
      <a href="#"><i class="fa fa-twitter"></i></a>
      <a href="#"><i class="fa fa-linkedin"></i></a>
      <a href="#"><i class="fa fa-pinterest-p"></i></a>
    </div>
    <div class="humberger__menu__contact">
      <ul>
        <li><i class="fa fa-envelope"></i> urbanleaf@cadmin.com</li>
        <li>Free Shipping for all Order of ₹499</li>
      </ul>
    </div>
  </div>
  <!-- Humberger End -->
  {{#if h}}
  <!-- Hero Section Begin -->
  <section class="hero">
    <div class="container">
      <div class="row">

        <div class="col-lg-3">
          <div class="hero__categories">
            <div class="hero__categories__all">
              <i class="fa fa-bars"></i>
              <span>All departments</span>
            </div>
            <ul>
              {{#each category}}
              <li><a href="/get-category-products?id={{this.category}}">{{this.category}}</a></li>
              {{/each}}
            </ul>
          </div>
        </div>

        <div class="col-lg-9">
          <div class="hero__search">
            <div class="hero__search__form">
              <form action="/productsearch">
                <div class="hero__search__categories">
                  All Categories
                  <span class="arrow_carrot-down"></span>
                </div>
                <input name="key" type="search" placeholder="What do yo u need?" />
                <button type="submit" class="site-btn">SEARCH</button>
              </form>
            </div>

            <div class="hero__search__phone">
              <div class="hero__search__phone__icon">
                <i class="fa fa-phone"></i>
              </div>

              <div class="hero__search__phone__text">
                <h5>+91 991214888</h5>
                <span>support 24/7 time</span>
              </div>
            </div>
          </div>

          <div class="hero__item set-bg" data-setbg="img/hero/banner.jpg">
            <div class="hero__text">
              <span>FRUIT FRESH</span>
              <h2>Vegetable <br />100% Organic</h2>
              <p>Free Pickup and Delivery Available</p>
              <a href="#" class="primary-btn">SHOP NOW</a>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>
  {{/if}}
  <!-- Hero Section End -->
</header>
<!-- Header Section End -->