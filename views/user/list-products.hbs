<!-- Page Preloder -->
<div id="preloder">
  <div class="loader"></div>
</div>

<div class="container">


  <!-- Breadcrumb Section Begin -->
  <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="breadcrumb__text">
            <h2>Urban Leaf Shopping</h2>
            <div class="breadcrumb__option">
              <a href="/">Home</a>
              <span>{{category.category}}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb Section End -->

  <!-- Product Section Begin -->
  <section class="product spad">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-5">
          <div class="sidebar">
            <div class="sidebar__item featured__controls">
              <h4>Categories</h4>
              <ul>
                {{#each category}}
                <li><a href="/get-category-products?id={{this.category}}">{{this.category}}</a></li>
                {{/each}}



              </ul>
            </div>
            <div class="sidebar__item">
              <h4>Price</h4>
              <div class="price-range-wrap">
                <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                  data-min="10" data-max="999">
                  <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                  <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                  <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                </div>
                <div class="range-slider">
                  <div class="price-input">
                    <form action="/get-products">
                      <input type="text" name="minimum" id="minamount" />
                      <input type="text" name="maximum" id="maxamount" />
                      <button type="submit" class="btn btn-light"><svg xmlns="http://www.w3.org/2000/svg" width="16"
                          height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                          <path
                            d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                        </svg></i></button>


                    </form>
                  </div>
                </div>
              </div>
            </div>
            {{!-- color sort --}}
            {{!-- latest loc --}}

          </div>
        </div>
        <div class="col-lg-9 col-md-7">
          <div class="product__discount">
            <div class="section-title product__discount__title">
              <h2>Sale Off</h2>
            </div>
          </div>
          <div class="filter__item">
            <div class="row">
              <div class="col-lg-4 col-md-5">
                <div class="filter__sort">
                  <span>Sort By</span>
                  <select>
                    <option value="0">Default</option>
                    <option value="0">Default</option>
                  </select>
                </div>
              </div>
              <div class="col-lg-4 col-md-4">
                <div class="filter__found">
                  <h6><span>{{product.length}}</span> Products found</h6>
                </div>
              </div>
              <div class="col-lg-4 col-md-3">
                <div class="filter__option">
                  <span class="icon_grid-2x2"></span>
                  <span class="icon_ul"></span>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            {{#each product}}

            <div class="col-lg-4 col-md-6 col-sm-6 mt-4">
              <div class="product__discount__item">
                <div class="product__discount__item__pic set-bg" data-setbg="/product-images/{{this.Image.[1]}}"
                  style='background-image: url("/product-images/{{this.Image.[1]}}");'>
                  <div class="product__discount__percent">{{this.percentage}}%<a>Off</a>
                  </div>
                  <ul class="product__item__pic__hover" style="cursor:pointer">
                    <li><a onclick="return addToWishlist('{{this._id}}')"><i class="fa fa-heart"></i></a></li>
                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                    <li><a onclick="return addToCart('{{this._id}}')"><i class="fa fa-shopping-cart"></i></a></li>
                  </ul>
                </div>
                <div class="product__discount__item__text">
                  <span>{{this.category}}</span>
                  <h5><a href="/product-details?id={{this._id}}">{{this.productName}}</a></h5>
                  <div class="product__item__price">₹{{this.OurPrice}}.00
                    <span>₹{{this.marketPrice}}.00</span>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          <div class="product__pagination">
            {{#each pageCount}}
            <a href="/get-products?id={{this}}">{{this}}</a>
            {{/each}}
            <a href="#"><i class="fa fa-long-arrow-right"></i></a>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<!-- Product Section End -->