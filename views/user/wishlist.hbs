<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Wishlist</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Home</a>
                        <span>Wishlist</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
{{#if products}}
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th> &ensp; &ensp; &ensp;&ensp; &ensp; &ensp;&ensp; &ensp; &ensp;&ensp; &ensp; &ensp;
                                </th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}

                            <tr>
                                <td class="shoping__cart__item">
                                    <img src="/product-images/{{this.product.Image.[1]}}" alt="" style="width: 100px;">
                                    <h5>{{this.product.productName}}</h5>
                                </td>
                                <td class="shoping__cart__price">
                                    {{this.product.OurPrice}}

                                </td>

                                <td class="shoping__cart__total">
                                    <li><a class="btn btn-sm" onclick="return addToCartt('{{this.product._id}}')"><i
                                                class="fa fa-shopping-cart">Add to Cart</i></a></li>
                                </td>
                                <td class="shoping__cart__item__close">
                                    {{!-- <a
                                        onclick="removeWishlistProduct('{{this.product._id}}','{{this._id}}')"><span
                                            class="icon_close"></span></a> --}}

                                    <a onclick="return confirm('Delete confirmation of {{this.product.productName}} ?')"
                                        class="dropdown-item"
                                        href="javascript:removeWishlistProduct('{{this.product._id}}','{{this._id}}')"><i
                                            class="icon_close"></i>
                                        Remove</a>
                                </td>

                            </tr>
                            <!-- Modal -->
                            {{/each}}

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</section>
{{else}}
<section class="breadcrumb-section set-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <img src="img/image_processing20200728-19184-ig9n4n.jpg" alt="">
                    {{!-- <h2>Shopping Cart</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Home</a>
                        <span>Shopping Cart</span> --}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="div text-center">
    <a href="/" class="text-center btn btn-success btn-xs">Start Shopping</a>
</div>
{{/if}}
<script>

    function removeWishlistProduct(proId, wishId) {
        $.ajax({
            url: '/remove-wishlist-cart',
            data: {
                proId: proId,
                wishId: wishId
            },
            method: 'post',
            success: (response) => {
                if (response) {

                    location.reload()

                }
            }
        })
    }
</script>